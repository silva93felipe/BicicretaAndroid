<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_card">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wrench" />

    <TextView
        android:id="@+id/nomePecaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Freios"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataCompraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/10/2025"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/valorPecaTextView"
        app:layout_constraintTop_toBottomOf="@+id/valorPecaTextView" />

    <TextView
        android:id="@+id/quilometroPecaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 km"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dataCompraTextView"
        app:layout_constraintEnd_toEndOf="@+id/nomeBicicletaPecaTextView"
        app:layout_constraintTop_toBottomOf="@+id/nomeBicicletaPecaTextView" />

    <TextView
        android:id="@+id/nomeBicicletaPecaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="South"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nomePecaTextView" />

    <TextView
        android:id="@+id/valorPecaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 40,00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/nomePecaTextView"
        app:layout_constraintTop_toBottomOf="@+id/nomePecaTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>