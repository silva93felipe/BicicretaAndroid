            android:exported="false" />
        <activity
            android:name=".app.activity.BicicletasActivity"
            android:exported="false" />
        <activity
            android:name=".app.activity.CadastroPecaActivity"
            android:exported="false" />
        <activity
            android:name=".app.activity.CadastroViagemActivity"
            android:exported="false" />
        <activity
            android:name=".app.activity.CadastroBicicletaActivity"
            android:exported="false" />
        <activity
            android:name=".app.activity.BemVindoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activity.PecasActivity"
            android:exported="false" />
        <activity
            android:name=".app.activity.ApresentacaoActivity"
            android:exported="false" />
        <activity
